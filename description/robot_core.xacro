<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="grey">
        <color rgba="0.40 0.50 0.530 1"/>
    </material>
    
    <material name="lightgrey" >
        <color rgba="0.8470588235294118 0.8627450980392157 0.8392156862745098 1.0" />
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="greyishteal" >
        <color rgba="0.44313725490196076 0.6235294117647059 0.5686274509803921 1.0" />
    </material>

    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.1 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.17 0 0.06" rpy="0 0 0"/>
            <geometry>
               <box size="0.34 0.30 0.02"/>
            </geometry>
            <material name="grey"/>
        </visual>

        <visual>
            <origin xyz="0.330 0 0.10" rpy="0 0 0"/>
            <geometry>
               <box size="0.020 0.020 0.100"/>
            </geometry>
            <material name="grey"/>
        </visual>

    </link>



        <!-- LEFT WHEEL -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.172 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.033" radius="0.060" />
            </geometry>
            <material name="black"/>
        </visual>
    </link>



    <!-- RIGHT WHEEL -->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.172 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.034" radius="0.060" />
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <!-- CASTER WHEEL -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.33 0 0" rpy="0 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.05" />
            </geometry>
            <material name="lightgrey"/>
        </visual>
    </link>


</robot>